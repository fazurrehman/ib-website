{% block included_content %}
<script src="js/staticpages.min.js"></script>
<script>
  // ask question popup
  function initialAskQuestionModal() {
    $('#jscontactAskQuestionTrigger').click(function () {
      $('#contactAskQuestion').modal('show');
    });
  }

  $(document).ready(function () {
    initialAskQuestionModal();

    $('.block-item').click(function () {
      $(this).addClass('active').siblings().removeClass('active');
    });
  })
</script>
{% endblock %}