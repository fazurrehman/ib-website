{% extends "../../layouts/elements.twig" %}
{% block content %}

<!-- Default -->
<div class="icebox__promo">
  <div class="promo">
    <button type="button" class="promo__button icon-big icon--close-small-white" data-dismiss="modal"
      aria-label="Close">
      <span aria-hidden="true"></span>
    </button>
    <div class="promo__message">
      <p>Guaranteed shipping to Armenia <a class="promo__action" href="#">See details</a></p>
    </div>
  </div>
</div>

<br>

<div class="icebox__promo">
  <div class="promo">
    <button type="button" class="promo__button icon-big icon--close-small-white" data-dismiss="modal"
      aria-label="Close">
      <span aria-hidden="true"></span>
    </button>
