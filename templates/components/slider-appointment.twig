                  <time>17</time>
                  <label for="">May - Wed <i>(Closed)</i></label>
                </button>
                <button class="btn-week" type="button" data-date="Tomorrow">
                  <time>18</time>
                  <label for="">May - Thu</label>
                </button>
                <button class="btn-week" type="button" data-date="Tomorrow">
                  <time>19</time>
                  <label for="">May - Fri</label>
                </button>
                <button class="btn-week" type="button" data-date="Tomorrow">
                  <time>20</time>
                  <label for="">May - Sat</label>
                </button>
                <button class="btn-week" type="button" data-date="Tomorrow">
                  <time>21</time>
                  <label for="">May - Sun</label>
                </button>
              </div>
            </div>
          </div>
        </section>
        <!-- step -->
        <h4></h4>
        <section>
          <label class="booking-steps">Step: <strong>3</strong>/3</label>
          <div class="book-appointment--header">
            <h3 class="title-3">Select Appointment Date & Time</h3>
            <div class="appointment-preview">
              <span>27 March, at 02:00pm</span>
            </div>
          </div>
          <div class="book-appointment--container">
            <div class="appointment-time">
              <div class="time-slot">12:00pm</div>
              <div class="time-slot time-slot--selected">2:00pm</div>
              <div class="time-slot">4:00pm</div>
              <div class="time-slot">6:00pm</div>
            </div>
          </div>
          
        </section>
      </div>
    </form>

