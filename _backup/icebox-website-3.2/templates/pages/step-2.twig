{% extends "../layouts/checkout-layout.twig" %}
{% set page_title = "Checkout - Shipping" %}
{% set pageClass = "checkoutpage" %}
{% set checkoutPageState = "information" %}

{% block content %}
<div class="step">
  <form action="/step-3.html" class="checkout-edit">
    <div class="step__sections">
      <!-- edit -->
      <div class="section section--contact-information">
        <div class="section__header">
          <div class="column-flex">
            <div class="column-flex__item pl-0">
              <h5 class="section__header-title">Shipping</h5>
            </div>
          </div>
        </div>
        <div class="section__content">
          <div class="content-wrapper">
            <div class="content-wrapper__row" role="row">
              <div class="checkout-block">
                <div class="checkout-block__inner">
                  <span class="checkout-block__label">Contact</span>
                  <span class="checkout-block__content">fazurrehman@gmail.com</span>
                </div>
                <div class="checkout-block__inner__btn">
                  <a href="#">Change</a>
                </div>
              </div>
              <div class="checkout-block">
                <div class="checkout-block__inner">
                  <span class="checkout-block__label">Ship to</span>
                  <span class="checkout-block__content">Brookside Street Glen Cove, New york</span>
                </div>
                <div class="checkout-block__inner__btn">
                  <a href="#">Change</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <form action="step-3.html">
        <div class="section section--shipping-methods">
          <div class="section__header">
            <div class="column-flex">
              <div class="column-flex__item pl-0">
                <h5 class="section__header-title">Shipping method</h5>
              </div>
            </div>
          </div>
          <div class="section__content">
            <div class="content-wrapper">
              <div class="content-wrapper__row content-wrapper__tight">
                <div class="radio-row">
                  <div class="radio-row__inner">
                    <div class="radio__input">
                      <input type="radio" name="myRadio" id="shippingFree" class="radio" checked>
                    </div>
                    <label for="shippingFree" class="radio__label">
                      <span class="radio__label--primary">Express delivery (1-3 days)</span>
                      <span class="radio__label--stuff bold">Free</span>
                    </label>
                  </div>
                </div>
                <div class="radio-row">
                  <div class="radio-row__inner">
                    <div class="radio__input">
                      <input type="radio" name="myRadio" id="shippingPaid" class="radio">
                    </div>
                    <label for="shippingPaid" class="radio__label">
                      <span class="radio__label--primary">Express DHL (1-3 days)</span>
                      <span class="radio__label--stuff bold">40$</span>
                    </label>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="step__footer">
          <a href="step-1.html" class="button-has-icon ml-1 btn--back">
            <span>
              <aside class="icon">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                  <path fill="#646C76" fill-rule="evenodd"
                    d="M5.143 8.51L1.633 5l3.51-3.51-.776-.776L.082 5l4.285 4.286.776-.776z" clip-rule="evenodd" />
                </svg>
              </aside>
            </span>
            <span class="text-3">Return to information</span>
          </a>
          <button class="btn btn-primary btn-checkout">Continue to payment</button>
        </div>
      </form>

    </div>
  </form>
</div>

{% endblock %}