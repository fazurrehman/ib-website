    <button type="button" id="appointmentCancel" class="icon-b slidebar-close icon--close-rounded"></button>

    <form action="">
      <div id="wizard" class="book-appointment">
        <!-- step -->
        <h4></h4>
        <section>
          <label class="booking-steps">Step: <strong>1</strong>/3</label>
          <div class="book-appointment--header">
            <h3 class="title-3">Book an In-store Appointment</h3>
            <p>We will authenticate & evaluate your pieces in front of your eyes.<br>
              <strong>Most transactions take 15 minutes</strong>, and we pay cash on the spot</p>

          </div>
          <div class="book-appointment--container">
            <div class="input__wrapper input__wrapper-space">
              <label for="customerName" class="input__normal-label">Your Name</label>
              <input type="text" class="input__normal" id="customerName" placeholder="Full Name">
            </div>
            <div class="input__wrapper input__wrapper-space">
              <label for="customerEmail" class="input__normal-label">Email Address</label>
              <input type="email" class="input__normal" id="customerEmail" placeholder="Email">
            </div>
            <div class="input__wrapper input__wrapper-space">
              <label for="customerPhone" class="input__normal-label">Phone Number</label>
              <input type="number" class="input__normal" id="customerPhone" placeholder="Contact Number">
            </div>
          </div>
        </section>
        <!-- step -->
        <h4></h4>
        <section>
          <label class="booking-steps">Step: <strong>2</strong>/3</label>
          <div class="book-appointment--header">
            <h3 class="title-3">Describe your item!</h3>
            <p>So we can prepare for your appointment.</p>
          </div>
          <div class="book-appointment--container">
            <div class="input__wrapper">
              <div class="select-catagory">
                <label for="selectGender" class="input__normal-label">What do want to sell?</label>
                <select class="dropdown__custom input__normal" id="ringSize">
                  <option selected="">Select</option>
                  <option>Watch</option>
                  <option>Earring</option>
                  <option>Necklace</option>
                  <option>Bracelet</option>
                  <option>Pendant</option>
                  <option>Others</option>
                </select>
              </div>
            </div>
            <div class="input__wrapper input__wrapper-space">
              <textarea type="text" class="input__default textarea-style"
                placeholder="Describe your items if you have a moment"></textarea>
            </div>
          </div>
        </section>
        <!-- step -->
        <h4></h4>
        <section>
          <label class="booking-steps">Step: <strong>2</strong>/3</label>
          <div class="book-appointment--header">
            <h3 class="title-3">Select Appointment</h3>
            <p>Simply select your available time to visit store!</p>
          </div>
          <div class="book-appointment--container">
            <!-- calendar -->
            <div class="calendar">
              <div class="calendar__week calendar-grid">
                <button class="btn-week" type="button" onclick="selectDate(this);" data-date="Today">
